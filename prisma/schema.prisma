
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  role     Role     @default(WAITER)
  Branch   Int      @default(1)
}

enum Role {
  ADMIN
  WAITER
  BRANCH_MANAGER
  HQM
}




model Order {
  id         Int      @id @default(autoincrement())
  orderDate  DateTime
  orderStatus String
  userId     Int
  waiter     WAITER @relation(fields: [userId], references: [id])
  Branch     Int
}
