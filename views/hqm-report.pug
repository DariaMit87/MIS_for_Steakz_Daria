include ./layouts/header

block content
  h1 HQM Report

  table
    thead
      tr
        th Order ID
        th Order Date
        th Menu Item
        th Waiter
        th Branch
    tbody
      each order in orders
        tr
          td #{order.id}
          td #{new Date(order.orderDate).toLocaleString()}
          td #{order.menuItem.item}
          td #{order.user.email}
          td #{order.branch.name}

include ./layouts/footer